<?xml version="1.0"?>
<ruletest id="camel-test" xmlns="http://windup.jboss.org/schema/jboss-ruleset"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://windup.jboss.org/schema/jboss-ruleset http://windup.jboss.org/schema/jboss-ruleset/windup-jboss-ruleset.xsd">
    <testDataPath>data/camel/xml/fabric_component</testDataPath>
    <rulePath>../camel.windup.xml</rulePath>
    <ruleset>
        <rules>
            <rule id="camel-test-001">
                <when>
                    <not>
                        <iterable-filter size="2">
                            <hint-exists message="Using Deprecated Fabric Component" />
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Deprecated Camel Component was not found" />
                </perform>
            </rule>
            <rule id="camel-test-002">
                <when>
                    <not>
                        <iterable-filter size="1">
                            <hint-exists message="Defined Fabric Component" />
                        </iterable-filter>
                    </not>
                </when>
                <perform>
                    <fail message="Defined Fabric Component was not found" />
                </perform>
            </rule>

        </rules>
    </ruleset>    
</ruletest>